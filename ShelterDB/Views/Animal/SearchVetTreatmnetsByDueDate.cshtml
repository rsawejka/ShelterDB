@model ShelterDB.Models.AllVetTreatmentsModel

<h4>Get Vet Treatments Due on a Date</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetAllVetTreamentsByDueDate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="DateDue" class="control-label"></label>
                <input type="date" asp-for="DateDue" class="form-control" />
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
